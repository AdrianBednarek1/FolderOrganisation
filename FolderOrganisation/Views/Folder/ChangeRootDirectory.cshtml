@{
    ViewBag.Title = "ChangeRootDirectory";
}

<h2>Change Root Directory</h2>

<p>Choose one of listed drives.</p>
<p>Selecting default root C:\FolderOrganisation is recommended in other to improve perfomanse.</p>
@using (Html.BeginForm("ChangeRootDirectory", "Folder", FormMethod.Post))
{
    @Html.DropDownList("selectedRootDirectory", (List
        <SelectListItem>)ViewBag.dropDsownList)
    <input type="submit" />
    
}